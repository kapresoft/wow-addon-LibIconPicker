package-as: LibIconPicker
# --------------------------
manual-changelog: false
license-output: LICENSE.txt
enable-nolib-creation: no

embedded-libraries:
  - LibStub
  - Ace3

tools-used:
  - DevSuite
  - DebugChatFrame
  - Addon-Usage
  - Bugsack
  - Bug-Grabber

# Resources:
# Ace3: https://www.wowace.com/projects/ace3
# LibSharedMedia: https://www.wowace.com/projects/libsharedmedia-3-0

externals:
  LibIconPicker/Core/ExtLib/WowAce/Ace3: https://repos.wowace.com/wow/ace3/trunk
  LibIconPicker/Core/ExtLib/WowAce/LibSharedMedia/LibSharedMedia-3.0: https://repos.wowace.com/wow/libsharedmedia-3-0/trunk/LibSharedMedia-3.0

ignore:
  - "*.sh"
  - "*.md"
  - "*.yaml"
  - "*.yml"
  - dev
  - doc
  - scripts
  - Interface
  - Pull-Ext-Lib.toc
  - LibIconPicker/Core/ExtLib/WowAce/Ace3/Ace3.lua
  - LibIconPicker/Core/ExtLib/WowAce/Ace3/tests
  - LibIconPicker/Core/ExtLib/WowAce/Ace3/Bindings.xml

move-folders:
  LibIconPicker/LibIconPicker: LibIconPicker
